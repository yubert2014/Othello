<Window x:Class="Simulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="シミュレーション" Height="480" Width="640">
    <Grid Background="#FFCBCBCB">
        <Canvas Name="Canvas1" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="400" Background="#FFF1FFD2" PreviewMouseDown="Canvas1_PreviewMouseDown_1"/>
        <Button Content="開始" HorizontalAlignment="Left" Margin="547,10,0,0" VerticalAlignment="Top" Width="75" Click="OnClickStartButton"/>
        <Button Content="戻る" HorizontalAlignment="Left" Margin="547,39,0,0" VerticalAlignment="Top" Width="75" Click="OnClickUndoButton"/>
        <Button Content="パス" HorizontalAlignment="Left" Margin="547,68,0,0" VerticalAlignment="Top" Width="75" Click="OnClickPassButton"/>
        <Button Content="終了" HorizontalAlignment="Left" Margin="547,416,0,0" VerticalAlignment="Top" Width="75" Click="OnClickCancelButton"/>
    </Grid>
</Window>
